<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.englishiseasy.Theory_tenses"
    android:background="@drawable/background1"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="45sp"
        android:id="@+id/greeting_inTheoryTenses"
        foo:customFont="fonts/Baron.ttf" />

    <com.example.englishiseasy.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/using_TheoryTenses"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_marginTop="20sp"
        foo:customFont="fonts/Baron.ttf" />

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/using"
        android:textColor="#000"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        foo:customFont="fonts/Baron.ttf" />

    <com.example.englishiseasy.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attendedWords_TheoryTenses"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_marginTop="25sp"
        foo:customFont="fonts/Baron.ttf" />

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:id="@+id/attended_words"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        foo:customFont="fonts/Baron.ttf" />

    <com.example.englishiseasy.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/formula_TheoryTenses"
        android:textColor="#000"
        android:textSize="40sp"
        android:layout_marginTop="25sp"
        foo:customFont="fonts/Baron.ttf" />

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:id="@+id/formula"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        foo:customFont="fonts/Baron.ttf" />

</LinearLayout>
