<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.englishiseasy.ChooseGroup"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1">

    <com.example.englishiseasy.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/greeting_inChooseGroup"
        android:textSize="33sp"
        android:textColor="#000"
        android:id="@+id/greeting_inChooseGroup"
        android:layout_centerHorizontal="true"
        foo:customFont="fonts/Baron.ttf"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/simple_inChooseGroup"
        android:gravity="center"
        android:textSize="33sp"
        android:textColor="#000"
        android:id="@+id/simple_group"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/greeting_inChooseGroup"
        android:layout_centerHorizontal="true"
        foo:customFont="fonts/Baron.ttf"
        android:background="@drawable/tv_frame3"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/progressive_inChooseGroup"
        android:gravity="center"
        android:textSize="33sp"
        android:textColor="#000"
        android:id="@+id/progressive_group"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/simple_group"
        android:layout_centerHorizontal="true"
        foo:customFont="fonts/Baron.ttf"
        android:background="@drawable/tv_frame3"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/perfect_inChooseGroup"
        android:gravity="center"
        android:textSize="33sp"
        android:textColor="#000"
        android:id="@+id/perfect_group"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/progressive_group"
        android:layout_centerHorizontal="true"
        foo:customFont="fonts/Baron.ttf"
        android:background="@drawable/tv_frame3"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/perfect_progressive_inChooseGroup"
        android:gravity="center"
        android:textSize="33sp"
        android:textColor="#000"
        android:id="@+id/perfect_progressive_group"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/perfect_group"
        android:layout_centerHorizontal="true"
        foo:customFont="fonts/Baron.ttf"
        android:background="@drawable/tv_frame3"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/all_inChooseGroup"
        android:gravity="center"
        android:textSize="33sp"
        android:textColor="#000"
        android:id="@+id/all_groups"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/perfect_progressive_group"
        android:layout_centerHorizontal="true"
        foo:customFont="fonts/Baron.ttf"
        android:background="@drawable/tv_frame3"/>

</RelativeLayout>
