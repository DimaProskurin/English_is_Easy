<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.englishiseasy.ChooseDifficulty"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1" >

    <com.example.englishiseasy.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/greeting_inChooseDifficulty"
        android:textSize="24sp"
        android:textColor="#000"
        android:id="@+id/greetings_in_choose_difficulty"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        foo:customFont="fonts/Baron.ttf"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/low_inChooseDifficulty"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30sp"
        android:id="@+id/button_1lvl"
        android:layout_below="@+id/greetings_in_choose_difficulty"
        android:layout_marginTop="50dp"
        foo:customFont="fonts/Baron.ttf"
        android:background="@drawable/tv_frame3"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/mid_inChooseDifficulty"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30sp"
        android:id="@+id/button_2lvl"
        android:layout_below="@+id/button_1lvl"
        android:layout_marginTop="50dp"
        foo:customFont="fonts/Baron.ttf"
        android:background="@drawable/tv_frame3"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/high_inChooseDifficulty"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30sp"
        android:id="@+id/button_3lvl"
        android:layout_below="@+id/button_2lvl"
        android:layout_marginTop="50dp"
        foo:customFont="fonts/Baron.ttf"
        android:background="@drawable/tv_frame3"/>

</RelativeLayout>
