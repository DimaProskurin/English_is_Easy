<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.englishiseasy.MainActivity"
    android:background="@drawable/background1">

    <com.example.englishiseasy.MyTextView
        android:text="@string/appName_inMainActivity"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="75dp"
        android:textColor="#000"
        android:id="@+id/greeting"
        android:layout_centerHorizontal="true"
        foo:customFont="fonts/Baron.ttf"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/startGame_inMainActivity"
        android:textSize="60sp"
        android:textColor="#000"
        android:id="@+id/textView_StartGame"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/greeting"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        foo:customFont="fonts/Baron.ttf"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/leaderboard_inMainActivity"
        android:textSize="60sp"
        android:textColor="#000"
        android:id="@+id/textView_Score"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView_StartGame"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        foo:customFont="fonts/Baron.ttf"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/theory_inMainActivity"
        android:textSize="60sp"
        android:textColor="#000"
        android:id="@+id/textView_Theory"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView_Score"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        foo:customFont="fonts/Baron.ttf"/>

    <com.example.englishiseasy.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/help_inMainActivity"
        android:textSize="60sp"
        android:textColor="#000"
        android:id="@+id/textView_Help"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView_Theory"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        foo:customFont="fonts/Baron.ttf"/>


</RelativeLayout>
