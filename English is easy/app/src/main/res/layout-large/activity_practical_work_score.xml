<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.englishiseasy.Practical_work_score"
    android:background="@drawable/background1">

    <com.example.englishiseasy.MyTextView
        android:text="@string/name_Score"
        android:textSize="35sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        foo:customFont="fonts/Baron.ttf"/>

    <com.example.englishiseasy.MyTextView
        android:text="@string/points_Score"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_points"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        foo:customFont="fonts/Baron.ttf"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:hint="@string/writeName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000"
        android:textSize="40sp"
        android:id="@+id/name"
        android:layout_alignParentBottom="true" />

    <com.example.englishiseasy.MyTextView
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:text="@string/ok"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@drawable/tv_frame2"
        android:id="@+id/click_ok"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        foo:customFont="fonts/Baron.ttf"/>

</RelativeLayout>
